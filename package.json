{
  "name": "creche-management-system",
  "version": "2.0.0",
  "description": "Système complet de gestion de crèche avec backend et frontend",
  "main": "backend/server.js",
  "scripts": {
    "install": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "npm run start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy": "node deploy.js",
    "deploy:setup": "node setup-secrets.js",
    "deploy:backend": "cd backend && git push heroku main",
    "deploy:frontend": "cd frontend && vercel --prod",
    "deploy:check": "curl -f https://creche-backend-api.herokuapp.com/api/health && curl -f https://creche-frontend.vercel.app",
    "install:prerequisites": "node install-prerequisites.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "creche",
    "management",
    "backend",
    "frontend",
    "react",
    "nodejs"
  ],
  "author": "Creche Management Team",
  "license": "MIT"
}
