# Configuration de production pour Heroku
NODE_ENV=production
PORT=3003

# Base de données MySQL (ClearDB)
# Ces variables seront automatiquement configurées par le script de déploiement
DB_HOST=
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=

# JWT Configuration
JWT_SECRET=

# Upload Configuration
UPLOAD_PATH=/tmp/uploads

# CORS Configuration
CORS_ORIGIN=https://creche-frontend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
