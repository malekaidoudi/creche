{
  "name": "creche-backend",
  "version": "2.0.0",
  "description": "Backend API pour le système de gestion de crèche",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build completed - no build step required'",
    "db:init": "node scripts/init-database-v1.js",
    "db:migrate": "node scripts/init-database-v1.js",
    "seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-database.js && npm run db:init && npm run seed",
    "railway:setup": "node scripts/railway-setup.js",
    "railway:check": "node scripts/check-railway-db.js",
    "railway:recreate": "node scripts/recreate-railway-db.js",
    "railway:test": "node scripts/test-railway-login.js",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "keywords": [
    "api",
    "express",
    "mysql",
    "jwt",
    "creche"
  ],
  "author": "Creche Management Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^7.0.9"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  }
}
