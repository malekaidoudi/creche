{
  "name": "creche-backend-api",
  "description": "Backend API pour le système de gestion de crèche Mima Elghalia",
  "repository": "https://github.com/malekaidoudi/creche-backend",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "mysql", "api", "creche"],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    {
      "plan": "cleardb:ignite",
      "as": "CLEARDB"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "UPLOAD_PATH": {
      "description": "Path for file uploads",
      "value": "/tmp/uploads"
    }
  },
  "scripts": {
    "postdeploy": "npm run db:init"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  }
}
